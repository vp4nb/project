package com.bellinfo.exam.control;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.bellinfo.exam.model.ExamQuestion;
@Controller
public class ExamPostingControl {

	@Autowired
	ExamQuestion examQuestion;
	
	@RequestMapping(value="/post-exam/subject/{subject}", method=RequestMethod.GET)
	public String postExam(Model model, @PathVariable String subject)
	{
		examQuestion.setSubject(subject);
		model.addAttribute("examQuestion",examQuestion);
		return "post-exam";
	}
	
}
